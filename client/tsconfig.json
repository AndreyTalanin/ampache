{
    "compilerOptions": {
        "target": "es2018",
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "es6",
        "moduleResolution": "node",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "~*": ["./*"]
        }
    },
    "exclude": ["node_modules"]
}
